{
  "name": "web-build-boilerplate",
  "version": "1.0.0",
  "description": "Web development based on npm scripts using yarn",
  "main": "index.js",
  "repository": "git@github.com:smashydesign/web-build-boilerplate.git",
  "author": "Shabith Ishan <shabith.ishan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn serve",
    "prestart": "",
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "test": "yarn run eslint && yarn run stylelint",
    "scss": "node-sass src/scss/main.scss dist/css/main.css --include-path node_modules/foundation-sites/scss",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "stylelint": "stylelint \"src/scss/**/*.scss\"",
    "eslint": "eslint --cache --fix src/js/",
    "imagemin": "imagemin src/images/* --out-dir=dist/images",
    "icons": "svgo -f src/images/svgs -o dist/images/svgs && svg-sprite-generate -d dist/images/svgs -o dist/images/svgs/sprite.svg",
    "lint": "yarn eslint && yarn stylelint",
    "build:html": "pug -P src/ --out dist/",
    "build:css": " yarn scss && yarn stylelint",
    "build:css:prod": " yarn scss && yarn autoprefixer && yarn stylelint",
    "build:js": "yarn eslint && yarn copy:js",
    "build:js:prod": "yarn eslint && yarn copy:js && yarn uglify",
    "build:images": "yarn imagemin && yarn icons",
    "build": "yarn build:html && yarn build:css && yarn build:js",
    "build:prod": "yarn build:html && yarn build:css:prod && yarn build:js:prod && yarn build:images && yarn copy:assets && yarn copy:favicons && yarn serve",
    "copy:assets": "ncp src/assets dist/assets",
    "copy:favicons": "ncp src/favicons dist/",
    "copy:js": "ncp src/js dist/js",
    "uglify": "yarn uglify:vendor && yarn uglify:src",
    "uglify:vendor": "rimraf dist/js/vendor && ncp src/js/vendor dist/js/vendor",
    "uglify:src": "rimraf dist/jssrc && uglifyjs-folder src/js/src/ --config-file \"uglify.json\" -x .js -eo dist/js/src/",
    "watch:js": "onchange \"src/js\" -- yarn build:js",
    "watch:css": "onchange \"src/scss\" -- yarn build:css",
    "watch:html": "onchange \"**/*.pug\" -- yarn build:html",
    "watch:images": "onchange \"src/images\" -- yarn build:images",
    "watch:assets": "onchange \"src/assets\" -- yarn copy:assets",
    "watch:favicon": "onchange \"src/favicons\" -- yarn copy:favicons",
    "watch": "npm-run-all -p serve watch:*",
    "serve": "browser-sync start --server \"./dist\" --files \"dist/css/*.css, dist/js/**/*.js, dist/**/*.html\"",
    "postinstall": "yarn build",
    "rsync": "echo 'please provide rsync command with options'",
    "deploy": "build:prod && rsync"
  },
  "config": {},
  "devDependencies": {
    "autoprefixer": "^6.7.5",
    "browser-sync": "^2.18.8",
    "copy": "^0.3.0",
    "eslint": "^3.16.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-standard": "^2.0.1",
    "foundation-sites": "^6.3.1",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^3.0.0-beta",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "svg-sprite-generator": "^0.0.7",
    "svgo": "^0.7.2",
    "uglify-js": "^3.1.0",
    "uglifyjs-folder": "^1.5.0"
  },
  "browserslist": [
    "Last 2 versions",
    "not ie <= 9"
  ],
  "dependencies": {}
}
